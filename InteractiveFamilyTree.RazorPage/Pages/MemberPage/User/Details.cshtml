@page
@model InteractiveFamilyTree.RazorPage.Pages.MemberPage.User.DetailsModel

@{
    ViewData["Title"] = "User Information";
}

<style>

    .image-style {
        width: 50px;
        height: 50px;
    }

</style>

<h1>Details</h1>

<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Image)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Member.Image" alt="" class="image-style" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.FullName)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Gender)
        </dt>
        <dd class="col-sm-10">
            @if(Model.Member.Gender){
                <span>Male</span>
            }else{
                <span>Female</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Birthday)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Birthday)
        </dd>
        @*<dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Password)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Password)
        </dd>*@
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Member?.Id">Edit</a> 
</div>

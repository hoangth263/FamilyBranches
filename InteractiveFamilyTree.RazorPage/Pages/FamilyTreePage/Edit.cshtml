@page
@model             EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FamilyTree</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FamilyTree.Id" />
            <div class="form-group">
                <label asp-for="FamilyTree.FirstName" class="control-label"></label>
                <input asp-for="FamilyTree.FirstName" class="form-control" />
                <span asp-validation-for="FamilyTree.FirstName" class="text-danger"></span>
            </div>
                <input asp-for="FamilyTree.CreateDate" class="form-control" type="hidden"/>
            <div class="form-group">
                <label asp-for="FamilyTree.ModifyDate" class="control-label"></label>
                <input asp-for="FamilyTree.ModifyDate" class="form-control" type="hidden" value="@DateTime.Now"/>
                <span asp-validation-for="FamilyTree.ModifyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamilyTree.TotalGeneration" class="control-label"></label>
                <input asp-for="FamilyTree.TotalGeneration" class="form-control" min="1"/>
                <span asp-validation-for="FamilyTree.TotalGeneration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamilyTree.Status" class="control-label"></label>
                <input asp-for="FamilyTree.Status" class="form-check-input" type="checkbox"/>
                <span asp-validation-for="FamilyTree.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

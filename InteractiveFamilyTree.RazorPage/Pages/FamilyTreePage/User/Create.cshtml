@page
@model InteractiveFamilyTree.RazorPage.Pages.FamilyTreePage.User.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>FamilyTree</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FamilyTree.FirstName" class="control-label"></label>
                <input asp-for="FamilyTree.FirstName" class="form-control" />
                <span asp-validation-for="FamilyTree.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="FamilyTree.CreateDate" type="hidden" class="form-control" value="@DateTime.Now"/>
                <span asp-validation-for="FamilyTree.CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="FamilyTree.ModifyDate" type="hidden" class="form-control" value="@DateTime.Now" />
                <span asp-validation-for="FamilyTree.ModifyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<i style="color: red">@Model.Notice</i>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

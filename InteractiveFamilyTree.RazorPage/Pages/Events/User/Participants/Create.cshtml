@page
@model InteractiveFamilyTree.RazorPage.Pages.Events.User.Participants.CreateModel

@{
    ViewData["Title"] = "Add Member";
}

<h1>Add Member</h1>

<h4>EventParticipant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EventParticipant.FamilyMemberId" class="control-label">Family Member</label>
                <select asp-for="EventParticipant.FamilyMemberId" class ="form-control" asp-items="ViewBag.FamilyMemberId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-eventId="@TempData["eventId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model InteractiveFamilyTree.RazorPage.Pages.Events.Participants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Edit</h1>

<h4>EventParticipant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventParticipant.Id" />
            <div class="form-group">
                <label asp-for="EventParticipant.EventId" class="control-label"></label>
                <select asp-for="EventParticipant.EventId" class="form-control" asp-items="ViewBag.EventId"></select>
                <span asp-validation-for="EventParticipant.EventId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventParticipant.FamilyMemberId" class="control-label"></label>
                <select asp-for="EventParticipant.FamilyMemberId" class="form-control" asp-items="ViewBag.FamilyMemberId"></select>
                <span asp-validation-for="EventParticipant.FamilyMemberId" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EventParticipant.Status" /> @Html.DisplayNameFor(model => model.EventParticipant.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
